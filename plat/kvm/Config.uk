menuconfig PLAT_KVM
       bool "KVM guest"
       default n
       depends on (ARCH_X86_64)
       select LIBUKDEBUG
       select LIBUKALLOC
       select LIBUKTIMECONV
       select LIBNOLIBC if !HAVE_LIBC
       help
                Create a Unikraft image that runs as a KVM guest

if (PLAT_KVM)
config KVM_PCI
       bool "PCI Bus Driver"
       default y
       depends on (ARCH_X86_64)
       select LIBUKBUS
       help
                PCI bus driver for probing and operating PCI devices

       config KVM_VIRTIO_NET
       bool "Virtio Network Driver"
       default n
       select LIBUKNETDEV
       help
                Driver for virtio-net PCI devices

endif
